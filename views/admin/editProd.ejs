<div class="blank">


    <div class="container">
    
        <h2 class="text-center">Edit Product</h2>
    
        <form style="padding: 60px;" action="/admin/editProduct/<%= product._id %>" method="post">
            <!-- 2 column grid layout with text inputs for the first and last names -->
            
              
                    <div class="form-outline mb-4">
                        <input type="text" name="name" value="<%= product.name %>" id="form6Example1"
                            class="form-control" />
                        <label class="form-label" for="form6Example1">Product name</label>
                    </div>
              
                
            
    
            <!-- Text input -->
            <div class="form-outline mb-4">
                <input type="text" name="category" value="<%= product.category %>" id="form6Example3"
                    class="form-control" />
                <label class="form-label" for="form6Example3">Category</label>
            </div>
    
            <!-- Number input -->
            <div class="form-outline mb-4">
                <input type="number" value="<%= product.price %>" name="price" id="form6Example6" class="form-control" />
                <label class="form-label" for="form6Example6">Price</label>
            </div>
    
            <!-- Message input -->
            <div class="form-outline mb-4">
                <textarea class="form-control" name="description" id="form6Example7" rows="4">
                    <%= product.description %>
                </textarea>
                <label class="form-label" for="form6Example7">Description</label>
            </div>
            <div class="form-group">
                <label for="exampleFormControlFile1">file input</label>
                <img src="/images/product/ludus/<%= product._id %>.jpeg" alt="" style="width: 100px;height:100px ;">
                <input type="file" class="form-control-file" id="exampleFormControlFile1" name="image">
            </div>
    
           
    
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Sumbit</button>
        </form>
    
    </div>

</div>